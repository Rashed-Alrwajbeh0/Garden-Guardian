class GardenError(Exception):
    pass


class PlantError(GardenError):
    pass


class WaterError(GardenError):
    pass


class Plant:
    def __init__(self, name: str, water: int, sun: int):
        self.water: int = water
        self.sun: int = sun
        self.name: str = name


class GardenManager:
    def __init__(self) -> None:
        self.plant_list: list[Plant] = []
        self.water_level = 100
    
    def add_plant(self, name: str, water: int, sun: int) -> None:
        try:
            if name == "":
                raise PlantError("Plant name cannot be empty!")
            self.plant_list += [Plant(name, water, sun)]
            print(f"Added {name} successfully")
        except PlantError as e:
            print(f"Error adding plant: {e}")

    def water_plant(self, water: int) -> None:
        print("Opening watering system")
        try:
            for plant in self.plant_list:
                name: str = plant.name
                if name is None:
                    raise PlantError(f"Error : Watering {name}.")
                if self.water_level < water:
                    raise WaterError("The water is not enough.")
                print(f"Watering {name} - success")
                self.water_level -= water
                plant.water += water
        except (WaterError, PlantError) as e:
            print(e)
        finally:
            print("Closing watering system (cleanup)")

    def check_health(self, plant: Plant) -> None:
        try:
            if plant.name is None:
                raise PlantError(f"Error : Watering {plant.name}.")
            water: int = plant.water
            sun: int =  plant.sun
            if water < 1:
                raise WaterError(f"Water level {water} is too low (min 1)")
            if water > 10:
                raise WaterError(f"Water level {water} is too high (max 10)")
            if sun < 2:
                raise PlantError(f"Sunlight hours {sun} is too low (min 2)")
            if sun > 12:
                raise PlantError(
                       f"Sunlight hours {sun} is too high (max 12)"
                       )
            print(f"{plant.name}: healthy (water: {water}, sun: {sun})")
        except (PlantError, WaterError) as e:
            print(f"Error checking {plant.name}: {e}")


def test_garden_management() -> None:
    print("=== Garden Management System ===")
    manager: GardenManager = GardenManager()
    print("\nAdding plants to garden...")
    manager.add_plant("tomato", 1, 8)
    manager.add_plant("lettuce", 11, 8)
    manager.add_plant("", 6, 5)
    print("\nWatering plants...")
    manager.water_plant(4)
    print("\nChecking plant health...")
    manager.check_health(manager.plant_list[0])
    manager.check_health(manager.plant_list[1])
    print("\nTesting error recovery...")
    try:
        raise WaterError("Not enough water in tank")
    except GardenError as e:
        print(f"Caught GardenError: {e}")
        print("System recovered and continuing...")
    print("\nGarden management system test complete!")

if __name__ == "__main__":
    test_garden_management()

        
